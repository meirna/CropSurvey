@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "O projektu";
}

<partial name="_Navbar" />
<div class="container">
    <main role="main">
        <div class="py-10 py-lg-20">
            <div class="container max-w-screen-md">
                <div class="row">
                    <div class="col-12">
                        <h5 class="h5 mb-5 text-uppercase text-primary">
                            Kropaj.me
                        </h5>
                        <h1 class="ls-tight font-bolder mb-5">
                            O projektu
                        </h1>
                        <p class="lh-relaxed mb-10 p-5 bg-gray-200 rounded">
                            <a href="https://en.wikipedia.org/wiki/Cropping_(image)" target="_blank">Izrezivanje fotografije (eng. <span class="font-italic">cropping</span>)</a> je postupak uklanjanja njenih neželjenih rubnih dijelova. 
                            Najčešće se koristi za poboljšanje kompozicije ili promjenu omjera stranica fotografije.
                        </p>
                        <p class="lead mb-3">
                            <span class="font-italic">Automatsko izrezivanje fotografija</span> tema je <a asp-controller="Home" asp-action="AboutMe">mojeg</a> završnog rada. 
                        </p>
                        <p class="lead mb-3">
                            Set podataka ove ankete sastoji se od 15 fotografija. Fotografije su automatski izrezane korištenjem dvaju algoritama: jedan primjenjuje suvremenu umjetnu inteligenciju (neuronska mreža), a drugi "klasične" metode računalnog vida.                 
                        </p>
                        <p class="lead mb-3">
                            Anketa stoga ima 30 koraka i služi za usporedbu rezultata tih dvaju algoritama.
                        </p>
                        <p class="lead mb-3">
                            Ako vas zanimaju rezultati ankete, na svojem profilu označite opciju <span class="font-code bg-gray-200 rounded p-1">"Želim saznati rezultate istraživanja"</span> i unesite email adresu na koju ću poslati rezultate čim budu dostupni.
                        </p>
                        <p class="lead mb-3">
                            Hvala na interesu i sudjelovanju. :)
                        </p>
                        <div class="mx-n2 mt-10">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a href="#" class="btn btn-lg btn-primary shadow-sm mx-2 px-lg-8">
                                    Ispuni anketu
                                </a>
                            } else
                            {
                                <a class="btn btn-lg btn-primary shadow-sm mx-2 px-lg-8" asp-area="Identity" asp-page="/Account/Register">
                                    Ispuni anketu
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
