@{
	var Completed = (int)ViewData["completedCount"];
    var Total = (int)ViewData["totalCount"];
    var NextID = Completed+1;
}

@if (Completed == 0)
{
    <a class="btn btn-sm btn-primary" asp-controller="Survey" asp-action="Start">
        Započni anketu
    </a>
} else
{
    <a class="btn btn-sm btn-primary" asp-controller="Survey" asp-action="Question" asp-route-id="@NextID">
        @(Completed == Total ? "Uredi anketu" : "Nastavi anketu")
    </a>
}
