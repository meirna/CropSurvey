@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="px-5 py-5 p-lg-0 bg-surface-secondary">
    <div class="d-flex justify-content-center">
        <div class="col-lg-5 col-xl-4 p-12 p-xl-20 position-fixed start-0 top-0 h-screen overflow-y-hidden bg-primary d-none d-lg-flex flex-column">
            <a class="d-block h-10 text-white" asp-controller="Home" asp-action="Index">
                kropaj.me
            </a>
            <div class="mt-32 mb-20">
                <h1 class="ls-tight font-bolder display-6 text-white mb-5">
                    Anketa<br />kropaj.me
                </h1>
                <p class="text-white text-opacity-80">
                    Istraživanje uspješnosti<br /> automatskog izrezivanja fotografija
                </p>
            </div>
            <!--<div class="w-56 h-56 bg-orange-500 rounded-circle position-absolute bottom-0 end-20 transform translate-y-1/3"></div>-->
        </div>
        <div class="col-12 col-md-9 col-lg-7 offset-lg-5 border-left-lg min-h-lg-screen d-flex flex-column justify-content-center py-lg-16 px-lg-20 position-relative h-screen">
            <div class="row">
                <div class="col-lg-10 col-md-9 col-xl-6 mx-auto ms-xl-0">
                    <a class="d-block h-10" asp-controller="Home" asp-action="Index">
                        ← povratak na početnu stranicu
                    </a>
                    <div class="mt-10 mt-lg-5 mb-6 d-flex align-items-center d-lg-block">
                        <h1 class="ls-tight font-bolder h2">
                            Registracija
                        </h1>
                    </div>
                    <div class="alert alert-primary mb-6" role="alert">
                        Uspješna autentikacija @Model.ProviderDisplayName računom. Molimo dovršite registraciju ili se <strong><a asp-area="Identity" asp-page="/Account/Login">prijavite</a></strong>.
                    </div>

                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-5">
                            <label class="form-label" asp-for="Input.UserName" autocomplete="username" aria-required="true">Korisničko ime</label>
                            <input class="form-control form-control-muted" asp-for="Input.UserName">
                            <span class="text-danger" asp-validation-for="Input.UserName"></span>
                        </div>
                        <div>
                            <button class="btn btn-primary w-full" id="registerSubmit" type="submit">
                                Registriraj me
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
