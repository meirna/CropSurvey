@page
@model IndexModel
@{
    ViewData["Title"] = "Moj profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_AppLayout";
    var Genders = ViewData["Genders"] as List<SelectListItem>;
    var KnowledgeLevels = ViewData["KnowledgeLevels"] as List<SelectListItem>;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-12 col-xl-4">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-5">
                <label class="form-label" asp-for="Username">Korisničko ime</label>
                <input class="form-control" asp-for="Username" disabled>
            </div>
            <div class="mb-5">
                <label class="form-label" asp-for="Input.KnowledgeLevelID">Moje znanje o fotografiji je:</label>
                <select asp-for="Input.KnowledgeLevelID" asp-items="KnowledgeLevels" class="form-control"></select>
                <span asp-validation-for="Input.KnowledgeLevelID" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label class="form-label" asp-for="Input.Age">Dob</label>
                <input class="form-control" asp-for="Input.Age">
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label class="form-label" asp-for="Input.GenderID">Spol</label>
                <select asp-for="Input.GenderID" asp-items="Genders" class="form-control"></select>
            </div>
            <div class="mb-5">
                <label class="form-label" asp-for="Input.Email">Email adresa</label>
                <input class="form-control" asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.WantResults">
                    <label class="form-check-label" asp-for="Input.WantResults">
                        Želim saznati rezultate istraživanja
                    </label>
                </div>
            </div>
            <div>
                <button class="btn btn-primary w-full" id="update-profile-button" type="submit">
                    Spremi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
